<Window x:Class="Chuchupalova_OOP_Project_DiscountMarketplace.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chuchupalova_OOP_Project_DiscountMarketplace"
        mc:Ignorable="d"
        Title="Контакти DealHive" Height="720" Width="1024"  Background="#FAFAFA"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <!-- Кнопка Назад -->
        <Button Content="➜" 
Width="35" Height="35"
        FontSize="25"
HorizontalAlignment="Left" VerticalAlignment="Top"
Background="White" Foreground="#FF6600"
        
FontWeight="Bold" Click="BackButton_Click" BorderBrush="{x:Null}" RenderTransformOrigin="0.497,0.701" Margin="20">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-180.638"/>
                    <TranslateTransform X="0.131" Y="-14.071"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <!-- Основний контент -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="320" Width="306">

            <!-- Логотип -->
            <Image Source="Images/DealHive.png" Width="145" Height="142" Margin="0,0,0,10"/>



            <!-- Заголовок -->
            <TextBlock Text="Контакти" FontSize="16" FontWeight="SemiBold"
                       Foreground="#444" TextAlignment="Center" Margin="0,5"/>

            <!-- Номер телефону -->
            <Button Content="+38 (050) 123-45-67" Width="215" Height="30"
                    Background="White" BorderBrush="#FFFF6600" BorderThickness="1"
                    Foreground="Black" FontSize="12" FontFamily="Segoe UI" Margin="0,5"/>

            <!-- Email -->
            <Button Content="E-mail: admin@dealhive.com" Width="215" Height="30"
                    Background="White" BorderBrush="#FFFF6600" BorderThickness="1"
                    Foreground="Black" FontSize="12" FontFamily="Segoe UI" Margin="0,5"/>

            <Button Content="Години роботи: Пн-Пт з 9:00 до 18:00" Width="215" Height="30"
        Background="White" BorderBrush="#FFFF6600" BorderThickness="1"
        Foreground="Black" FontSize="12" FontFamily="Segoe UI" Margin="0,5"/>

        </StackPanel>
    </Grid>
</Window>