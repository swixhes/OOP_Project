<Window x:Class="Chuchupalova_OOP_Project_DiscountMarketplace.SuccessfulRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chuchupalova_OOP_Project_DiscountMarketplace"
        mc:Ignorable="d"
                Title="DealHive – Вхід" Height="720" Width="1024" Background="#FFF9FAFB" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">


        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Image Source="Images/successfulregistration.png" Height="157" Margin="0,20,0,20" HorizontalAlignment="Center" Width="226"/>
            <TextBlock Text="Обліковий запис створено" FontSize="22" FontWeight="SemiBold"
           Foreground="Black" TextAlignment="Center" Margin="0,0,0,15"/>
            <Button Content="Перейти на головну сторінку" Click="Continue_Click"
                    Height="45" Background="#FF6600" Foreground="White"
                    FontWeight="Bold" Margin="0,10,0,10" BorderBrush="{x:Null}"/>

        </StackPanel>
    </Grid>
</Window>