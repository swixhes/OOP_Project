<Window x:Class="Chuchupalova_OOP_Project_DiscountMarketplace.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chuchupalova_OOP_Project_DiscountMarketplace"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" >
            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Height="30"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <Button Content="Увійти" Click="LoginButton_Click" Height="40" Margin="0,10,0,0"/>

            <Button Content="Зареєструватися" Click="RegisterButton_Click" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
