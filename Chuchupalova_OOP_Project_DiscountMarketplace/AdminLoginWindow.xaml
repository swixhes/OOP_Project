<Window x:Class="Chuchupalova_OOP_Project_DiscountMarketplace.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chuchupalova_OOP_Project_DiscountMarketplace"
        mc:Ignorable="d"
        Title="Вхід адміністратора" Height="350" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Логін:"  FontSize="12"  FontFamily="Sans Serif Collection"/>
            <TextBox x:Name="UsernameTextBox"  FontSize="12"  FontFamily="Sans Serif Collection"/>

            <TextBlock Text="Пароль:"  FontSize="12"  FontFamily="Sans Serif Collection" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox"  FontSize="12"  FontFamily="Sans Serif Collection"/>

            <Button Content="Увійти" Margin="0,20,0,0" FontSize="12"  FontFamily="Sans Serif Collection" Click="LoginButton_Click" />
            <TextBlock Text="Скасувати" FontSize="12" HorizontalAlignment="Center"  Foreground="Gray" Cursor="Hand" MouseDown="ExitButton_Click" FontFamily="Sans Serif Collection"/>
        </StackPanel>
        
    </Grid>
</Window>
